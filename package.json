{
  "name": "base58-universal",
  "version": "1.0.1-0",
  "description": "Encode/decode using the Base58 Bitcoin Encoding Scheme.",
  "homepage": "https://github.com/digitalbazaar/base58-universal",
  "author": {
    "name": "Digital Bazaar, Inc.",
    "email": "support@digitalbazaar.com",
    "url": "https://digitalbazaar.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digitalbazaar/base58-universal"
  },
  "bugs": {
    "url": "https://github.com/digitalbazaar/base58-universal/issues",
    "email": "support@digitalbazaar.com"
  },
  "license": "BSD-3-Clause",
  "files": [
    "dist",
    "lib",
    "README.md",
    "LICENSE"
  ],
  "main": "dist/index.js",
  "browser": "dist/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/esm/index.js"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.14.1",
    "@babel/runtime": "^7.8.3",
    "babel-loader": "^8.0.6",
    "chai": "^4.3.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.21.0",
    "eslint-config-digitalbazaar": "^2.6.1",
    "esm": "^3.2.25",
    "karma": "^4.4.1",
    "karma-babel-preprocessor": "^8.0.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-edge-launcher": "^0.4.2",
    "karma-firefox-launcher": "^1.3.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-safari-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-tap-reporter": "0.0.6",
    "karma-webpack": "^4.0.2",
    "mocha": "^7.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.47.0",
    "webpack": "^4.41.5"
  },
  "nyc": {
    "exclude": [
      "tests"
    ],
    "reporter": [
      "html",
      "text-summary"
    ]
  },
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "rollup": "rollup -c rollup.config.js",
    "build": "npm run clear && npm run rollup && ./build-dist.sh",
    "clear": "rimraf dist && mkdir dist",
    "coverage": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text-summary npm run test-node",
    "coverage-report": "nyc report",
    "prepare": "npm run build",
    "test": "npm run test-node",
    "rebuild": "npm run clear && npm run build",
    "test-node": "cross-env NODE_ENV=test mocha --preserve-symlinks -r esm -t 30000 -A -R ${REPORTER:-spec} test/*.spec.js",
    "test-karma": "karma start",
    "lint": "eslint ."
  },
  "keywords": [
    "base58"
  ]
}
